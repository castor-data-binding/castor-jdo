<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

   <modelVersion>4.0.0</modelVersion>
   <groupId>org.codehaus.castor</groupId>
   <artifactId>castor-persistence</artifactId>
   <version>1.3.4-SNAPSHOT</version>
   <packaging>pom</packaging>

   <description>
	Castor is an open source data binding framework for Java[tm]. Itâ€™s the shortest path between Java objects, XML documents and relational tables.
   </description>

   <modules>
      <module>parent</module>
      <module>ddlgen</module>
      <module>cpa</module>
      <module>cpa-testcase-archetype</module>
      <module>cpactf</module>
      <module>jpa-extensions-it</module>
   </modules>

   <profiles>
      <!-- profile for executing all CPA performance suite tests -->
      <profile>
         <id>cpaptftests</id>
         <modules>
            <module>cpaptf</module>
         </modules>
      </profile>
      <!-- profile for building and testing examples project -->
      <profile>
         <id>examples</id>
         <modules>
            <module>examples</module>
         </modules>
      </profile>
      <!-- only generate Javadoc JARs during release -->
      <profile>
         <id>javadoc</id>
         <activation>
            <property>
               <name>performRelease</name>
               <value>true</value>
            </property>
         </activation>
         <build>
            <plugins>
               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-javadoc-plugin</artifactId>
                  <configuration>
                     <aggregate>true</aggregate>
                  </configuration>
                  <executions>
                     <execution>
                        <id>attach-javadocs</id>
                        <goals>
                           <goal>jar</goal>
                        </goals>
                     </execution>
                  </executions>
               </plugin>
            </plugins>
         </build>
      </profile>

      <profile>
         <id>release-sign-artifacts</id>
         <activation>
            <property>
               <name>performRelease</name>
               <value>true</value>
            </property>
         </activation>
         <build>
            <plugins>
               <plugin>
                  <groupId>org.apache.maven.plugins</groupId>
                  <artifactId>maven-gpg-plugin</artifactId>
                  <version>1.1</version>
                  <executions>
                     <execution>
                        <id>sign-artifacts</id>
                        <phase>verify</phase>
                        <goals>
                           <goal>sign</goal>
                        </goals>
                     </execution>
                  </executions>
               </plugin>
            </plugins>
         </build>
      </profile>

      <profile>
         <id>upload</id>
         <modules>
            <module>distribution</module>
         </modules>
         <build>
            <plugins>
               <plugin>
                  <artifactId>maven-assembly-plugin</artifactId>
                  <version>2.5.3</version>
               </plugin>
            </plugins>
         </build>
      </profile>

   </profiles>

</project>
